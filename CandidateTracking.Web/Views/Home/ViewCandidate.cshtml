@using CandidateTracking.Data
@model CandidateTrackingViewModel

<div class="row">
    <div class="col-md-4 col-md-offset-3">
        <div class="well">
            <h4>Name :@Model.Candidate.Name</h4>
            <br />
            <h4>Phone :@Model.Candidate.Phone</h4>
            <br />
            <h4>Email :@Model.Candidate.Email</h4>
            <br />
            <h4>Notes :@Model.Candidate.Notes</h4>
            <br />
            <button class="btn btn-success" id="confirmed-btn" data-id="@Model.Candidate.Id">Confirmed</button>
            <button class="btn btn-danger" id="refused-btn" data-id="@Model.Candidate.Id">Refused</button>
        </div>
    </div>
</div>

@section scripts{
            <script src="/js/Buttons.js"></script>
}